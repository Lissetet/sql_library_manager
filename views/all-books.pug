doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Books 
    link(rel="stylesheet", href="/stylesheets/style.css")
  body 
    h1 Books
    p 
      a.button(href="/books/new") Create New Book 
    table 
      thead 
        tr 
          th Title 
          th Author 
          th Genre 
          th Year 
      tbody 
        each book in books 
          tr 
            td 
              a(href=`/books/${book.id}`) #{book.title}
            td= book.author 
            td= book.genre 
            td= book.year 